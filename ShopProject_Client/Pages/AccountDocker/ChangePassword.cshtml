<script>
    function decodeToken(token) {
        const base64Url = token.split('.')[1];
        const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
        return JSON.parse(atob(base64));
    }
    var accessToken = sessionStorage.getItem("auToken");
    const decodedPayload = decodeToken(accessToken);
    var tokendecode = decodedPayload;

    $(document).ready(function () {
        // Lấy dữ liệu ban đầu từ TempData
        var initialData = @Html.Raw(TempData["InitialData"]);
        console.log(initialData);
        if (initialData.presentPassword != null &&
            initialData.newPassword != null &&
            initialData.reEnterNewPassword != null

        ) {
            if (initialData.newPassword != initialData.reEnterNewPassword) {
                $("#err").show();
                return;
            }
            $.ajax({
                url: 'https://localhost:44312/Account/' + tokendecode.AccountId,
                method: 'PUT',
                headers: {
                    'Authorization': 'Bearer ' + accessToken
                },
                data: JSON.stringify(initialData),
                contentType: 'application/json',
                success: function (response) {
                    swal.fire({
                        icon: 'success',
                        title: 'ChangePassword Successfully!',
                        text: 'Please!! login again!!',
                    }).then(function () {
                        sessionStorage.clear();
                        window.location.href = "/AccountDocker/Login";
                    });
                },
                error: function (jqXHR) {
                    console.log(jqXHR);
                    var response = jqXHR.responseText;
                    if (jqXHR.status === 400) {
                        if (response == "oldpass") {
                            Swal.fire({
                                icon: 'error', // Sử dụng 'error' thay vì 'success' để hiển thị biểu tượng lỗi
                                title: 'ChangePassword Failed!', // Thay đổi tiêu đề
                                text: 'Present password was wrong. Please try again.', // Thay đổi nội dung thông báo
                                confirmButtonText: 'Close' // Thay đổi văn bản nút Close
                            });
                        }
                    } else {
                        if (jqXHR.status === 0) {
                            window.location.href = "/Error/Error500";
                        } else {
                            // Handle other types of errors
                            console.error("Other error occurred: " + jqXHR.status);
                        }
                    }
                }
            });

        }
    });
    $(document).ready(function () {
        var initialData = @Html.Raw(TempData["InitialData"]);
        console.log(initialData);
        if (initialData.old != null) {
            $("#OldPass").val(initialData.presentPassword);
        }
        if (initialData.newpass != null) {
            $("#newPass").val(initialData.newPassword);
        }
        if (initialData.renew != null) {
            $("#ReNew").val(initialData.reEnterNewPassword);
        }
    });
   
</script>
<script>
    $(document).ready(function () {
        function decodeToken(token) {
            const base64Url = token.split('.')[1];
            const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
            return JSON.parse(atob(base64));
        }
        // Lấy dữ liệu từ biểu mẫu
        var accessToken = sessionStorage.getItem("auToken");
        if (accessToken != null) {
            const decodedPayload = decodeToken(accessToken);
            var tokendecode = decodedPayload;
        }
        else {
            tokendecode = null;
        }
        if (tokendecode != null) {
            $.ajax({
                url: 'https://localhost:44312/User/' + tokendecode.UserID,
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + accessToken
                },
                success: function (data) {
                    $('#user_name').text(data.fullName)
                },
                error: function (error) {
                    console.error('Lỗi khi tải dữ liệu: ' + error);
                }
            });
        }
    });
</script>

